<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" type="image/png" href="images/favicone/logo.svg"/>
        <link rel="stylesheet" href="styles/admin.css">
        <title>Articraft - Admin Stock</title>
    </head>


    <body>
        <nav id="header">
            <h1>Administration</h1>
            <div>
                <a href="commandes">Commandes</a>
                <a href="stock">Stock</a>
            </div>
        </nav>


        <h1 id="addtitle">Ajouter un produit</h1>
        <div id="containerAjout">
            <form action="/api/product" method="post">
                <div><p>Nom</p><input name="name" type="text" class="inputProduitA"required="required"></div>
                <div><p>Type</p><input name="type" type="text" class="inputProduitA"required="required"></div>
                <div><p>Quantité</p><input name="quantity" type="number" class="inputProduitA"required="required"></div>
                <div><p>Couleur</p><input name="color" type="text" class="inputProduitA"required="required"></div>
                <div><p>Prix</p><input name="price" type="number" class="inputProduitA"required="required"></div>
                <div style="margin-top: 1em;"><input class="submitStock" type="submit" value="Valider"></div>
            </form>
        </div>

        <h1 id="stocktitle">Etat du stock</h1>
        <form id="containerProduit" action="/" method="put">
            <% for (var i = 0; i<subs.length; i++) { %>
                <div class="sectionProduit">
                    <div class="imgContainer"><img alt="produit" src="images/<%= subs[i].color%>.png"></div>
                    <div class="labels">
                        <p>Article : <%= subs[i].name%></p>
                        <p>Quantité en stock : <%= subs[i].quantity%></p>
                        <p>Couleur : <%= subs[i].color%></p>
                    </div>
                    <div class="action">
                        <div><p>Quantité : </p><input name="quantity" type="number" class="inputProduit"required="required" value="<%= subs[i].quantity%>"></div>
                        <div><p>Prix : </p><input name="price" type="number" class="inputProduit"required="required" value="<%= subs[i].price%>"></div>
                        <div><input class="submitStock" type="submit" value="Valider"></div>
                    </div>
                </div>
            <% } %>
        </form>
        <div id="containerRecherche"></div>
    </body>
</html>